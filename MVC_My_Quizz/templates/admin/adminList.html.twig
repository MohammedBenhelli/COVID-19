{% extends "admin/header.html.twig" %}

{% block title %}Admin panel{% endblock %}

{% block body %}

    <div class="container">
        <h1>Admin List</h1>
        {% for user in users %}
            <div>
                <a href="/admin/profile/{{ user.id }}">
                    <h1 class="text-success text-decoration-none">{{ user.username }}</h1>
                    <a class="bg-danger text-white" href="/admin/deleteUser/{{ user.id }}">
                        X
                    </a>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}