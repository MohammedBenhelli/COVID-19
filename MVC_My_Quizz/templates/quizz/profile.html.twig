{% extends "quizz/header.html.twig" %}

{% block title %}Your Profile{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <form class="form-inline" method="post" action="/newMail">
                    <div class="form-group mx-sm-3 mb-2">
                        <label for="inputEmail" class="sr-only">Password</label>
                        <input type="email" class="form-control" id="inputEmail" name="inputEmail" placeholder="New Email">
                    </div>
                    <button type="submit" class="btn btn-primary mb-2">Change your email</button>
                </form>
                <form class="form-inline" method="post" action="/newPass">
                    <div class="form-group mx-sm-3 mb-2">
                        <label for="inputPass" class="sr-only">Password</label>
                        <input type="password" class="form-control" id="inputPass" name="inputPass" placeholder="Password">
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        <label for="inputPassConf" class="sr-only">Password Confirmation</label>
                        <input type="password" class="form-control" id="inputPassConf" name="inputPassConf" placeholder="Password Confirmation">
                    </div>
                    <button type="submit" class="btn btn-primary mb-2">Change your password</button>
                </form>
            </div>
            <div class="col-6">
                {% for quizz in score %}
                    <a href="/quizz/{{ quizz[1].id }}">
                        <h1 class="text-success text-decoration-none">{{ quizz[1].name }}</h1>
                    </a>
                    <div class="progress">
                        <div class="progress-bar  progress-bar-striped bg-info" role="progressbar" aria-valuenow="20"
                             aria-valuemin="0" aria-valuemax="100" style="width: {{ quizz[0].score * 10 }}%">
                        </div>
                    </div>
                    <hr>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}