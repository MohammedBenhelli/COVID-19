{% extends "quizz/header.html.twig" %}

{% block title %}Your Profile{% endblock %}

{% block body %}
    <div class="container">
        {% for quizz in score %}
            <a href="/quizz/{{ quizz[1].id }}">
                <h1>{{ quizz[1].name }}</h1>
            </a>
            <div class="progress progress-striped">
                <div class="progress-bar bg-info" role="progressbar" aria-valuenow="20"
                     aria-valuemin="0" aria-valuemax="100" style="width: {{ quizz[0].score * 10 }}%">
                </div>
            </div>
            <hr>
        {% endfor %}
    </div>
{% endblock %}